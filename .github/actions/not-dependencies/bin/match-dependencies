#!/usr/bin/env ruby

require 'json'

event = JSON.parse(File.read(ENV['GITHUB_EVENT_PATH']))

labels = event['pull_request']['labels'].map { |label| label['name'] }

if labels.any?(/dependencies/)
  puts "Labels #{labels.inspect} matched `/dependencies/`"
  exit(78)
else
  puts "Labels #{labels.inspect} did not match `/dependencies/`"
end
