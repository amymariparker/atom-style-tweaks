.float-right.my-3
  a.btn.btn-sm.btn-with-count href="#{star_path(@conn, :toggle, @tweak)}"
    = octicon(:star)
    '
    = if @starred do
      = gettext "Unstar"
    - else
      = gettext "Star"
  a.social-count href="#{tweak_stargazer_path(@conn, :index, @tweak)}"
    = length(@tweak.stargazers)
