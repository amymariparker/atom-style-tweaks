      = menu_item("styles-menu-item", page_path(@conn, :index, type: :style), gettext("Styles"), :paintcan, @params["type"] == "style")
    = render_if(@current_user, TweakView, "new_tweak_button.html", conn: @conn, current_user: @current_user)
  .four-fifths.column
    = render_many_or_blank(@tweaks, TweakView, "table_row.html", "blankslate.html", conn: @conn)
