doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    meta name="description" content="A database of tweaks for the Atom text editor"
    meta name="author" content="Lee Dohm"

    title = gettext "Atom Tweaks"
    link rel="stylesheet" href="#{static_path(@conn, "/css/app.css")}"

  body
    header.masthead
      .container
        a.masthead-logo href="/"
          span.mega-octicon.octicon-paintcan
          = gettext "Atom Tweaks"

        nav.masthead-nav
          = render_shared("login_button.html", assigns)

    .container
      = if get_flash(@conn, :info) do
        p.flash role="alert" = get_flash(@conn, :info)

      = if get_flash(@conn, :error) do
        p.flash.flash-error role="alert" = get_flash(@conn, :error)

      main role="main"
        = render @view_module, @view_template, assigns

    footer.container.mt-5
      .columns
        .two-fifths.column.centered
          .border-top.border-gray-light.text-center.small.text-gray-light.pt-2
            = gettext "Â© 2017 Lee Dohm"

    script src="#{static_path(@conn, "/js/app.js")}"
    javascript:
      hljs.initHighlightingOnLoad();
